{% extends 'SirepaePAEBundle:FactorRelacionado:index.html.twig' %}

{% block content -%}
    <div class="col-sm-12">
        <div class="pull-left">
            <h1 class="title">Factor Relacionado {{ entity.nombre }}</h1>
        </div>
        <div class="pull-right">
            {{ form(delete_form) }}
        </div>
    </div>

    {{ form(edit_form) }}

    {% if diagnostico is defined %}
        <a class="btn btn-default btn-lg pull-right" href="{{ path('diagnostico_edit',{id:diagnostico.id}) }}">Volver</a>
    {% else %}
        <a class="btn btn-default btn-lg pull-right" href="{{ path('evidencia') }}">Volver</a>
    {% endif %}
{% endblock %}
