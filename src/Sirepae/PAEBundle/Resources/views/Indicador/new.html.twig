{% extends 'SirepaePAEBundle:Indicador:index.html.twig' %}

{% block content -%}

    <h1 class="title">Nuevo Indicador</h1>

    {{ form(form) }}

    {% if noc is not null %}
        <a class="btn btn-default btn-lg pull-right" href="{{ path('noc_edit', {id: noc.id}) }}">Volver</a>
    {% elseif resultado_esperado is not null %}
        <a class="btn btn-default btn-lg pull-right" href="{{ path('resultado_esperado_edit', {id: resultado_esperado.id}) }}">Volver</a>
    {% else %}
        <a class="btn btn-default btn-lg pull-right" href="{{ path('indicador') }}">Volver</a>
    {% endif %}
{% endblock %}
