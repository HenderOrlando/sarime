{% extends 'SirepaePAEBundle:PAE:index.html.twig' %}

{% block content -%}

    <h1 class="title">Nueva Evidencia</h1>

    {{ form(form) }}

    {% if diagnostico is defined and diagnostico is not null %}
        <a class="btn btn-default btn-lg pull-right" href="{{ path('diagnostico_edit',{id : diagnostico.id}) }}">Volver</a>
    {% elseif clase is defined and clase is not null %}
        <a class="btn btn-default btn-lg pull-right" href="{{ path('clase_edit',{id : clase.id}) }}">Volver</a>
    {% else %}
        <a class="btn btn-default btn-lg pull-right" href="{{ path('factor_relacionado') }}">Volver</a>
    {% endif %}
{% endblock %}
