{% extends 'SirepaePAEBundle:Actividad:index.html.twig' %}

{% block content -%}

    <h1 class="title">Nueva Actividad</h1>

    {{ form(form) }}

    {% if nic is not null %}
        <a class="btn btn-default btn-lg pull-right" href="{{ path('nic_edit', {id: nic.id}) }}">Volver</a>
    {% elseif int is not null %}
        <a class="btn btn-default btn-lg pull-right" href="{{ path('intervencion_edit', {id: int.id}) }}">Volver</a>
    {% else %}
        <a class="btn btn-default btn-lg pull-right" href="{{ path('actividad') }}">Volver</a>
    {% endif %}
{% endblock %}
